---
// Footer 组件 - 支持多语言
import { getLangFromUrl } from '../../i18n/utils';

// 从URL获取当前语言
const currentPath = Astro.url.pathname;
const segments = currentPath.split('/').filter(Boolean);
const lang = ['en', 'id', 'zh'].includes(segments[0]) ? segments[0] : 'en';
const isChinese = lang === 'zh';

// 多语言文本
const translations = {
  en: {
    description: "Southeast Asia's premier trade exhibition platform, connecting businesses and opportunities since 2020.",
    quickLinks: 'Quick Links',
    aboutUs: 'About Us',
    events: 'Events',
    forExhibitors: 'For Exhibitors',
    forVisitors: 'For Visitors',
    newsMedia: 'News & Media',
    contact: 'Contact',
    officeHours: 'Office Hours',
    monday: 'Monday - Friday:',
    saturday: 'Saturday:',
    sunday: 'Sunday:',
    closed: 'Closed',
    copyright: '© 2026 Jakarta International Expo. All rights reserved.',
    privacyPolicy: 'Privacy Policy',
    termsOfService: 'Terms of Service',
    sitemap: 'Sitemap'
  },
  id: {
    description: 'Platform pameran dagang terkemuka di Asia Tenggara, menghubungkan bisnis dan peluang sejak 2020.',
    quickLinks: 'Tautan Cepat',
    aboutUs: 'Tentang Kami',
    events: 'Acara',
    forExhibitors: 'Untuk Peserta Pameran',
    forVisitors: 'Untuk Pengunjung',
    newsMedia: 'Berita & Media',
    contact: 'Kontak',
    officeHours: 'Jam Kantor',
    monday: 'Senin - Jumat:',
    saturday: 'Sabtu:',
    sunday: 'Minggu:',
    closed: 'Tutup',
    copyright: '© 2026 Jakarta International Expo. Hak Cipta Dilindungi.',
    privacyPolicy: 'Kebijakan Privasi',
    termsOfService: 'Ketentuan Layanan',
    sitemap: 'Peta Situs'
  },
  zh: {
    description: '东南亚首屈一指的贸易展览平台，自2020年起连接企业和商机。',
    quickLinks: '快速链接',
    aboutUs: '关于我们',
    events: '活动',
    forExhibitors: '展商服务',
    forVisitors: '参观者',
    newsMedia: '新闻媒体',
    contact: '联系方式',
    officeHours: '办公时间',
    monday: '周一至周五：',
    saturday: '周六：',
    sunday: '周日：',
    closed: '休息',
    copyright: '© 2026 雅加达国际博览会。版权所有。',
    privacyPolicy: '隐私政策',
    termsOfService: '服务条款',
    sitemap: '网站地图'
  }
};

const t = translations[lang as keyof typeof translations];
---

<footer class="bg-primary-900 text-white border-t-4 border-batik">
  <div class="container-custom">
    <!-- 主要内容区域 -->
    <div class="py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      
      <!-- 公司信息 -->
      <div>
        <h3 class="font-heading text-2xl font-bold mb-4">
          Jakarta<span class="text-red-500">Expo</span>
        </h3>
        <p class={`text-primary-100 text-sm mb-4 leading-relaxed ${isChinese ? 'font-chinese' : ''}`}>
          {t.description}
        </p>
        <!-- 社交媒体图标 -->
        <div class="flex gap-3">
          <a href="#" class="w-10 h-10 bg-primary-800 hover:bg-secondary-500 rounded-lg flex items-center justify-center transition-colors" aria-label="Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 bg-primary-800 hover:bg-secondary-500 rounded-lg flex items-center justify-center transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 bg-primary-800 hover:bg-secondary-500 rounded-lg flex items-center justify-center transition-colors" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- 快速链接 -->
      <div>
        <h4 class={`font-heading font-bold text-lg mb-4 ${isChinese ? 'font-chinese' : ''}`}>{t.quickLinks}</h4>
        <ul class="space-y-2 text-sm">
          <li><a href={`/${lang}/about`} class={`text-primary-100 hover:text-secondary-400 transition-colors ${isChinese ? 'font-chinese' : ''}`}>{t.aboutUs}</a></li>
          <li><a href={`/${lang}/events`} class={`text-primary-100 hover:text-secondary-400 transition-colors ${isChinese ? 'font-chinese' : ''}`}>{t.events}</a></li>
          <li><a href={`/${lang}/exhibitors`} class={`text-primary-100 hover:text-secondary-400 transition-colors ${isChinese ? 'font-chinese' : ''}`}>{t.forExhibitors}</a></li>
          <li><a href={`/${lang}/visitors`} class={`text-primary-100 hover:text-secondary-400 transition-colors ${isChinese ? 'font-chinese' : ''}`}>{t.forVisitors}</a></li>
          <li><a href={`/${lang}/news`} class={`text-primary-100 hover:text-secondary-400 transition-colors ${isChinese ? 'font-chinese' : ''}`}>{t.newsMedia}</a></li>
        </ul>
      </div>

      <!-- 联系方式 -->
      <div>
        <h4 class={`font-heading font-bold text-lg mb-4 ${isChinese ? 'font-chinese' : ''}`}>{t.contact}</h4>
        <ul class="space-y-3 text-sm text-primary-100">
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>SCBD, Jakarta 12190, Indonesia</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href="mailto:info@jakarta-expo.com" class="hover:text-secondary-400 transition-colors">info@jakarta-expo.com</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href="tel:+622112345678" class="hover:text-secondary-400 transition-colors">+62 21 1234 5678</a>
          </li>
        </ul>
      </div>

      <!-- 营业时间 -->
      <div>
        <h4 class={`font-heading font-bold text-lg mb-4 ${isChinese ? 'font-chinese' : ''}`}>{t.officeHours}</h4>
        <ul class={`space-y-2 text-sm text-primary-100 ${isChinese ? 'font-chinese' : ''}`}>
          <li class="flex justify-between">
            <span>{t.monday}</span>
            <span class="font-semibold">09:00 - 18:00</span>
          </li>
          <li class="flex justify-between">
            <span>{t.saturday}</span>
            <span class="font-semibold">09:00 - 14:00</span>
          </li>
          <li class="flex justify-between">
            <span>{t.sunday}</span>
            <span class="font-semibold text-red-400">{t.closed}</span>
          </li>
          <li class="text-xs text-primary-200 pt-2">
            WIB (GMT+7)
          </li>
        </ul>
      </div>

    </div>

    <!-- 分隔线 -->
    <div class="border-t border-primary-800"></div>

    <!-- 底部版权信息 -->
    <div class="py-6 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-primary-200">
      <p class={isChinese ? 'font-chinese' : ''}>{t.copyright}</p>
      <div class={`flex gap-6 ${isChinese ? 'font-chinese' : ''}`}>
        <a href={`/${lang}/privacy`} class="hover:text-secondary-400 transition-colors">{t.privacyPolicy}</a>
        <a href={`/${lang}/terms`} class="hover:text-secondary-400 transition-colors">{t.termsOfService}</a>
        <a href={`/${lang}/sitemap`} class="hover:text-secondary-400 transition-colors">{t.sitemap}</a>
      </div>
    </div>
  </div>
</footer>
