---
// SEO Head 组件 - 首页专用
interface Props {
  title?: string;
  description?: string;
  keywords?: string[];
  ogImage?: string;
  lang?: string;
}

const {
  title = "Jakarta International Expo 2026 | Southeast Asia's Premier Trade Show",
  description = "Join thousands of exhibitors and visitors at Jakarta International Expo 2026. Discover the latest innovations, connect with industry leaders, and explore business opportunities in Southeast Asia's largest trade exhibition.",
  keywords = [
    "Jakarta Exhibition Center",
    "Trade Show Indonesia",
    "Southeast Asia Business Events",
    "MICE Jakarta",
    "Jakarta Convention Center",
    "Indonesia Trade Fair",
    "JIExpo Kemayoran",
    "Business Exhibition Jakarta",
    "International Trade Show",
    "Jakarta Expo 2026"
  ],
  ogImage = "https://jakarta-expo.com/images/og-image.jpg",
  lang = "en"
} = Astro.props;

const siteUrl = "https://jakarta-expo.com";
const siteName = "Jakarta International Expo";
const canonicalUrl = `${siteUrl}/${lang}/`;
---

<!-- 基础 Meta 标签 -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(", ")} />
<meta name="author" content="Jakarta International Expo Organizers" />
<meta name="robots" content="index, follow" />
<meta name="language" content={lang} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

<!-- 页面标题 -->
<title>{title}</title>

<!-- Open Graph (OG) 标签 - Facebook/LinkedIn -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content={lang === 'en' ? 'en_US' : lang === 'id' ? 'id_ID' : 'zh_CN'} />

<!-- Twitter Card 标签 -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />
<meta name="twitter:creator" content="@JakartaExpo" />

<!-- 结构化数据 (JSON-LD) - Event Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Event",
  "name": "Jakarta International Expo 2026",
  "description": description,
  "startDate": "2026-03-15",
  "endDate": "2026-03-18",
  "eventStatus": "https://schema.org/EventScheduled",
  "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
  "location": {
    "@type": "Place",
    "name": "Jakarta Convention Center (JCC)",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Jl. Gatot Subroto",
      "addressLocality": "Jakarta",
      "addressRegion": "DKI Jakarta",
      "postalCode": "10270",
      "addressCountry": "ID"
    }
  },
  "image": [ogImage],
  "organizer": {
    "@type": "Organization",
    "name": "Jakarta International Expo Organizers",
    "url": siteUrl
  },
  "offers": {
    "@type": "Offer",
    "url": `${siteUrl}/en/contact`,
    "price": "0",
    "priceCurrency": "IDR",
    "availability": "https://schema.org/InStock",
    "validFrom": "2026-01-01"
  }
})} />

<!-- 结构化数据 (JSON-LD) - Organization Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": siteName,
  "url": siteUrl,
  "logo": `${siteUrl}/images/logo.png`,
  "description": "Southeast Asia's Premier Trade Exhibition and Business Event Organizer",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Jakarta",
    "addressCountry": "ID"
  },
  "sameAs": [
    "https://facebook.com/JakartaExpo",
    "https://twitter.com/JakartaExpo",
    "https://linkedin.com/company/jakarta-expo",
    "https://instagram.com/jakartaexpo"
  ]
})} />

<!-- 多语言替代链接 -->
<link rel="alternate" hreflang="en" href={`${siteUrl}/en/`} />
<link rel="alternate" hreflang="id" href={`${siteUrl}/id/`} />
<link rel="alternate" hreflang="zh" href={`${siteUrl}/zh/`} />
<link rel="alternate" hreflang="x-default" href={`${siteUrl}/en/`} />

<!-- 预加载关键资源 -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- 主题颜色 (移动端浏览器地址栏) -->
<meta name="theme-color" content="#0c4a6e" />
<meta name="msapplication-TileColor" content="#0c4a6e" />
