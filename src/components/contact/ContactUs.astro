    emailPlaceholder: 'email@anda.com',
    subjectLabel: 'Subjek',
    subjectOption: 'Pertanyaan Peserta Pameran (Pemesanan Stan)',
    messageLabel: 'Pesan',
    messagePlaceholder: 'Bagaimana kami bisa membantu Anda?',
    sendButton: 'Kirim Pesan',
    privacyText: 'Dengan mengirim pesan ini, Anda setuju dengan',
    privacyLink: 'Kebijakan Privasi'
  },
  zh: {
    title: '联系我们',
    subtitle: '有关于参展或参观的问题吗？我们在这里帮助您与雅加达的商业机会建立联系。',
    whatsappButton: '与我们聊天 (Bahasa/English)',
    address: '地址',
    addressLine1: 'Sudirman中央商务区,',
    addressLine2: 'Jakarta 12190, Indonesia',
    email: '邮箱',
    phone: '电话',
    officeHours: '办公时间',
    officeHoursText: '周一至周五, 09:00 - 18:00 WIB (GMT+7)',
