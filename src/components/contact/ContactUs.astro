    address: 'ALAMAT',
    addressLine1: 'Sudirman Central Business District,',
    addressLine2: 'Jakarta 12190, Indonesia',
    email: 'EMAIL',
    phone: 'TELEPON',
    officeHours: 'JAM KANTOR',
    officeHoursText: 'Sen - Jum, 09:00 - 18:00 WIB (GMT+7)',
    formTitle: 'Kirim Pesan',
    nameLabel: 'Nama',
