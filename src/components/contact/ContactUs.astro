const t = translations[lang as keyof typeof translations] || translations.en;
const isChinese = lang === 'zh';

const whatsappNumber = "6281234567890";
const whatsappMessage = "Hello, I would like to inquire about Jakarta International Expo 2026.";
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<section class="bg-neutral-50 section-padding" id="contact">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-start">
      
      <!-- Left Column: Contact Information -->
      <div class="space-y-8 animate-slide-up">
        <div>
          <h2 class={`font-heading text-4xl md:text-5xl font-bold text-primary-900 mb-4 ${isChinese ? 'font-chinese' : ''}`}>
            {t.title}
          </h2>
          <p class={`font-sans text-lg text-neutral-600 max-w-md ${isChinese ? 'font-chinese' : ''}`}>
            {t.subtitle}
          </p>
        </div>

        <!-- WhatsApp Button -->
        <div>
          <a 
            href={whatsappLink}
            target="_blank"
            class="flex items-center justify-center w-full sm:w-auto gap-3 px-6 py-3 bg-[#25D366] hover:bg-[#20bd5a] text-white font-semibold rounded-lg transition-all shadow-md hover:shadow-lg"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            <span>{t.whatsappButton}</span>
          </a>
        </div>

        <!-- Contact Details -->
        <div class="space-y-6">
          
          <!-- Address -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class={`font-semibold text-primary-900 text-sm uppercase tracking-wider mb-1 ${isChinese ? 'font-chinese' : ''}`}>{t.address}</h3>
              <p class={`text-neutral-600 ${isChinese ? 'font-chinese' : ''}`}>
                {t.addressLine1}<br/>
                {t.addressLine2}
              </p>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class={`font-semibold text-primary-900 text-sm uppercase tracking-wider mb-1 ${isChinese ? 'font-chinese' : ''}`}>{t.email}</h3>
              <button 
                onclick="navigator.clipboard.writeText('info@jakarta-expo.com'); alert('Email copied!');"
                class="text-primary-600 hover:text-primary-700 transition-colors cursor-pointer"
              >
                info@jakarta-expo.com
              </button>
            </div>
          </div>

          <!-- Phone -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <h3 class={`font-semibold text-primary-900 text-sm uppercase tracking-wider mb-1 ${isChinese ? 'font-chinese' : ''}`}>{t.phone}</h3>
              <button 
                onclick="navigator.clipboard.writeText('+62 21 1234 5678'); alert('Phone copied!');"
                class="text-primary-600 hover:text-primary-700 transition-colors cursor-pointer"
              >
                +62 21 1234 5678
              </button>
            </div>
          </div>

          <!-- Office Hours -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class={`font-semibold text-primary-900 text-sm uppercase tracking-wider mb-1 ${isChinese ? 'font-chinese' : ''}`}>{t.officeHours}</h3>
              <p class={`text-neutral-600 ${isChinese ? 'font-chinese' : ''}`}>{t.officeHoursText}</p>
            </div>
          </div>

        </div>
      </div>

      <!-- Right Column: Contact Form -->
      <div class="bg-white rounded-2xl shadow-card p-8 lg:p-10 animate-slide-up" style="animation-delay: 0.2s;">
        <h3 class={`font-heading text-2xl md:text-3xl font-bold text-primary-900 mb-6 ${isChinese ? 'font-chinese' : ''}`}>
          {t.formTitle}
        </h3>

        <form class="space-y-6">
          <!-- Name and Email Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class={`block font-medium text-neutral-700 mb-2 ${isChinese ? 'font-chinese' : ''}`}>{t.nameLabel}</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                placeholder={t.namePlaceholder}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                required
              />
            </div>
            <div>
              <label for="email" class={`block font-medium text-neutral-700 mb-2 ${isChinese ? 'font-chinese' : ''}`}>{t.emailLabel}</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder={t.emailPlaceholder}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                required
              />
            </div>
          </div>

          <!-- Subject -->
          <div>
            <label for="subject" class={`block font-medium text-neutral-700 mb-2 ${isChinese ? 'font-chinese' : ''}`}>{t.subjectLabel}</label>
            <select 
              id="subject" 
              name="subject"
              class={`w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all ${isChinese ? 'font-chinese' : ''}`}
              required
            >
              <option value="exhibitor">{t.subjectOption}</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class={`block font-medium text-neutral-700 mb-2 ${isChinese ? 'font-chinese' : ''}`}>{t.messageLabel}</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5"
              placeholder={t.messagePlaceholder}
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all resize-none"
              required
            ></textarea>
          </div>

          <!-- Submit Button -->
          <div>
            <button 
              type="submit"
              class={`w-full btn btn-primary py-4 text-lg font-semibold ${isChinese ? 'font-chinese' : ''}`}
            >
              {t.sendButton}
            </button>
            <p class={`text-xs text-neutral-500 mt-3 text-center ${isChinese ? 'font-chinese' : ''}`}>
              {t.privacyText} <a href="/privacy" class="text-primary-600 hover:underline">{t.privacyLink}</a>
            </p>
          </div>
        </form>
      </div>

    </div>
  </div>
</section>
