---
// src/components/contact/ContactUs.astro
interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;

// 多语言文本
const translations = {
  en: {
    title: 'Get in Touch',
    subtitle: "Have questions about exhibiting or visiting? We're here to help you connect with business opportunities in Jakarta.",
    whatsappButton: 'Chat with Us (Bahasa/English)',
    address: 'ADDRESS',
