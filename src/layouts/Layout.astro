---
import '../styles/global.css';
import SEOHead from '../components/common/SEOHead.astro';

interface Props {
  title?: string;
  description?: string;
  keywords?: string[];
  ogImage?: string;
  lang?: string;
}

const props = Astro.props;
---

<!doctype html>
<html lang={props.lang || 'en'}>
	<head>
		<SEOHead {...props} />
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>