---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import ContactUsComponent from '../../components/contact/ContactUs.astro';
import Footer from '../../components/common/Footer.astro';

const pageTitle = "Hubungi Kami | Jakarta International Expo 2026";
const pageDesc = "Hubungi penyelenggara Jakarta International Expo 2026. Pesan stan, daftar sebagai pengunjung, atau kirimkan pertanyaan Anda melalui WhatsApp, email, atau telepon.";
---

<Layout 
  title={pageTitle}
  description={pageDesc}
  keywords={["Kontak Jakarta Expo", "Pertanyaan Pameran", "Lokasi Pameran Jakarta"]}
  lang="id"
>
  <Navbar />
  
  <main class="pt-20">
    <!-- 简单的页面标题 Header -->
    <div class="bg-primary-900 text-white py-16 text-center border-b-4 border-batik bg-batik">
      <h1 class="font-heading text-4xl md:text-5xl font-bold mb-4">Hubungi Kami</h1>
      <p class="text-primary-100 max-w-2xl mx-auto px-4">
        Kami ingin mendengar dari Anda. Jelajahi peluang bisnis di Asia Tenggara bersama kami.
      </p>
    </div>

    <!-- 联系组件 -->
    <ContactUsComponent lang="id" />
  </main>

  <Footer />
</Layout>
