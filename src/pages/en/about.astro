---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/common/Footer.astro';
---

<Layout 
  title="About Jakarta International Expo 2026"
  description="Learn about Jakarta International Expo - Southeast Asia's premier trade exhibition platform connecting businesses since 2020."
  lang="en"
>
  <Navbar />
  
  <main class="pt-20">
    <!-- Page Header -->
    <div class="bg-gradient-to-br from-primary-600 to-primary-800 text-white py-20 text-center border-b-4 border-batik bg-batik">
      <div class="container-custom">
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold mb-6">About Jakarta Expo</h1>
        <p class="text-primary-100 text-lg md:text-xl max-w-3xl mx-auto">
          Connecting businesses, creating opportunities, shaping the future of Southeast Asian trade.
        </p>
      </div>
    </div>

    <!-- Content Section -->
    <section class="bg-white section-padding">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-primary-900 mb-6">
              Who We Are
            </h2>
            <div class="prose prose-lg text-neutral-600 space-y-4">
              <p>
                Jakarta International Expo is Southeast Asia's premier trade exhibition and business event platform. Since our establishment in 2020, we have been dedicated to connecting global businesses with the dynamic Indonesian and Southeast Asian markets.
              </p>
              <p>
                Our events attract thousands of exhibitors and visitors from over 30 countries, creating a vibrant marketplace for innovation, networking, and business growth.
              </p>
              <p>
                Located in the heart of Jakarta's business district, we provide world-class facilities and services to ensure every exhibition delivers maximum value for all participants.
              </p>
            </div>
          </div>
          <div class="bg-neutral-100 rounded-2xl p-8 border-l-4 border-secondary-500">
            <h3 class="font-heading text-2xl font-bold text-primary-900 mb-6">Our Mission</h3>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-neutral-700">Foster international trade and business collaboration</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-neutral-700">Showcase Indonesian innovation and excellence</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-neutral-700">Create sustainable networking opportunities</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-neutral-700">Drive economic growth in the region</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="bg-batik-subtle bg-secondary-50 section-padding">
      <div class="container-custom">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-primary-900 text-center mb-12">
          By the Numbers
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-5xl font-heading font-bold text-primary-600 mb-2">50K+</div>
            <div class="text-neutral-600">Annual Visitors</div>
          </div>
          <div class="text-center">
            <div class="text-5xl font-heading font-bold text-primary-600 mb-2">500+</div>
            <div class="text-neutral-600">Exhibitors</div>
          </div>
          <div class="text-center">
            <div class="text-5xl font-heading font-bold text-primary-600 mb-2">30+</div>
            <div class="text-neutral-600">Countries</div>
          </div>
          <div class="text-center">
            <div class="text-5xl font-heading font-bold text-primary-600 mb-2">20K</div>
            <div class="text-neutral-600">sqm Space</div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-primary-900 text-white section-padding border-t-4 border-batik">
      <div class="container-custom text-center">
        <h2 class="font-heading text-3xl md:text-4xl font-bold mb-6">
          Ready to Join Us?
        </h2>
        <p class="text-primary-100 text-lg mb-8 max-w-2xl mx-auto">
          Be part of Southeast Asia's premier trade exhibition platform
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/en/exhibitors" class="btn bg-secondary-500 hover:bg-secondary-600 text-neutral-900 px-8 py-4 text-lg font-semibold rounded-lg shadow-lg transition-all">
            Become an Exhibitor
          </a>
          <a href="/en/contact" class="btn bg-white/10 hover:bg-white/20 text-white border-2 border-white px-8 py-4 text-lg font-semibold rounded-lg transition-all">
            Contact Us
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
