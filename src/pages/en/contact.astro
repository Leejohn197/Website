---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import ContactUsComponent from '../../components/contact/ContactUs.astro';
import Footer from '../../components/common/Footer.astro';

const pageTitle = "Contact Us | Jakarta International Expo 2026";
const pageDesc = "Get in touch with Jakarta International Expo 2026 organizers. Book a stand, register as a visitor, or send us your inquiries via WhatsApp, email, or phone.";
---

<Layout 
  title={pageTitle}
  description={pageDesc}
  keywords={["Contact Jakarta Expo", "Exhibition Inquiry", "Trade Show Location Jakarta"]}
  lang="en"
>
  <Navbar />
  
  <main class="pt-20">
    <!-- 简单的页面标题 Header -->
    <div class="bg-primary-900 text-white py-16 text-center border-b-4 border-batik bg-batik">
      <h1 class="font-heading text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
      <p class="text-primary-100 max-w-2xl mx-auto px-4">
        We'd love to hear from you. Explore business opportunities in Southeast Asia with us.
      </p>
    </div>

    <!-- 联系组件 -->
    <ContactUsComponent lang="en" />
  </main>

  <Footer />
</Layout>
