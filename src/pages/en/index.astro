---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Hero from '../../components/home/Hero.astro';
import EventCard from '../../components/events/EventCard.astro';
import Footer from '../../components/common/Footer.astro';

// 示例活动数据
const featuredEvents = [
  {
    title: "Jakarta Tech Expo 2026",
    date: "Mar 15-18",
    location: "JIExpo Kemayoran",
    image: "/images/events/tech-expo.jpg",
    slug: "jakarta-tech-expo-2026",
    featured: true,
    category: "Technology"
  },
  {
    title: "Indonesia Food & Beverage Fair",
    date: "Apr 5-8",
    location: "Jakarta Convention Center",
    image: "/images/events/food-beverage.jpg",
    slug: "indonesia-food-beverage-fair",
    featured: true,
    category: "F&B"
  },
  {
    title: "Southeast Asia Manufacturing Summit",
    date: "May 12-15",
    location: "JIExpo Kemayoran",
    image: "/images/events/manufacturing.jpg",
    slug: "sea-manufacturing-summit",
    featured: false,
    category: "Manufacturing"
  }
];
---

<Layout lang="en">
  <Navbar />

  <!-- Hero Section -->
  <Hero 
    title="Jakarta International Expo 2026"
    subtitle="Connecting Business in Southeast Asia"
    ctaPrimary="Book a Stand"
    ctaSecondary="Visitor Registration"
    ctaPrimaryLink="/en/exhibitors"
    ctaSecondaryLink="/en/contact"
    backgroundImage="/images/jakarta-skyline.jpg"
  />

  <!-- Featured Events Section -->
  <section class="bg-batik-subtle bg-secondary-50 section-padding">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="font-heading text-4xl md:text-5xl font-bold text-primary-500 mb-4">
          Featured Events
        </h2>
        <p class="font-sans text-lg text-neutral-600 max-w-2xl mx-auto">
          Discover upcoming exhibitions and trade shows in Southeast Asia's premier business hub
        </p>
      </div>

      <!-- Event Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredEvents.map(event => (
          <EventCard {...event} lang="en" />
        ))}
      </div>

      <!-- View All Events Button -->
      <div class="text-center mt-12">
        <a href="/en/exhibitors" class="btn btn-primary inline-block">
          View All Events
        </a>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="bg-white section-padding">
    <div class="container-custom">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="animate-slide-up">
          <div class="text-4xl md:text-5xl font-heading font-bold text-primary-500 mb-2">50K+</div>
          <div class="text-sm md:text-base text-neutral-600">Visitors</div>
        </div>
        <div class="animate-slide-up" style="animation-delay: 0.1s;">
          <div class="text-4xl md:text-5xl font-heading font-bold text-primary-500 mb-2">500+</div>
          <div class="text-sm md:text-base text-neutral-600">Exhibitors</div>
        </div>
        <div class="animate-slide-up" style="animation-delay: 0.2s;">
          <div class="text-4xl md:text-5xl font-heading font-bold text-primary-500 mb-2">30+</div>
          <div class="text-sm md:text-base text-neutral-600">Countries</div>
        </div>
        <div class="animate-slide-up" style="animation-delay: 0.3s;">
          <div class="text-4xl md:text-5xl font-heading font-bold text-primary-500 mb-2">20K</div>
          <div class="text-sm md:text-base text-neutral-600">sqm Area</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-batik bg-gradient-to-br from-primary-500 to-primary-700 text-white section-padding border-t-4 border-batik">
    <div class="container-custom text-center">
      <h2 class="font-heading text-3xl md:text-4xl font-bold mb-4">
        Ready to Join Us?
      </h2>
      <p class="font-sans text-lg mb-8 max-w-2xl mx-auto text-primary-100">
        Be part of Southeast Asia's largest trade exhibition and connect with thousands of business opportunities.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/en/exhibitors" class="btn bg-secondary-500 hover:bg-secondary-600 text-neutral-900 px-8 py-4 text-lg font-semibold rounded-lg shadow-lg transition-all">
          Become an Exhibitor
        </a>
        <a href="/en/contact" class="btn bg-white/10 hover:bg-white/20 text-white border-2 border-white px-8 py-4 text-lg font-semibold rounded-lg transition-all">
          Contact Us
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
